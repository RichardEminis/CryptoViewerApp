<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadlineTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_headline_size</item>
    </style>

    <style name="UdsChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size</item>

        <item name="chipBackgroundColor">@color/uds_color</item>
        <item name="android:textColor">@color/uds_text_color</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="android:textAlignment">center</item>
    </style>

    <style name="RubChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size</item>

        <item name="chipBackgroundColor">@color/rub_color</item>
        <item name="android:textColor">@color/black</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="android:textAlignment">center</item>
    </style>

    <style name="CryptoTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textColor">@color/crypto_text_color</item>
    </style>

    <style name="CryptoAbbreviationTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/crypto_abbreviation_text_color</item>
    </style>

    <style name="MeaningCryptoTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_semibold</item>
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textColor">@color/crypto_text_color</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="PercentTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/crypto_percent_text_color</item>
    </style>


</resources>